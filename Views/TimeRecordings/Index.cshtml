    .month {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px;
        background-color: #ccc;
        color: #333;
    }            

    .prev, .next {
        cursor: pointer;
    }

    .weekdays {
        display: flex;
        justify-content: space-between;
        background-color: #eee;
        padding: 10px;
    }

        .weekdays div {
            width: calc(100% / 7);
            text-align: center;
        }

    .days {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        grid-gap: 10px;
        padding: 10px;
    }

        .days div {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
            cursor: pointer;
