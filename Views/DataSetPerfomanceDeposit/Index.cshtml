    <style>
        /*memorandum of request styling start*/
        .cards-list {
            display: flex;
            justify-content: space-around;
        }

        figure {
            display: grid;
            border-radius: 1rem;
            overflow: hidden;
            cursor: pointer;
            margin: 0 10px; /* Add some margin between the cards */
        }

            figure > * {
                grid-area: 1/1;
                transition: 0.4s;
            }

            figure figcaption {
                display: grid;
                align-items: end;
                font-size: 25px;
                font-weight: bold;
                color: #0000;
                padding: 0.75rem;
                background: var(--c, #0009);
                clip-path: inset(0 var(--_i, 100%) 0 0);
                -webkit-mask: linear-gradient(#000 0 0), linear-gradient(#000 0 0);
                -webkit-mask-composite: xor;
                -webkit-mask-clip: text, padding-box;
                margin: -1px;
                justify-content: center;
            }

            figure:hover figcaption {
                --_i: 0%;
            }

            figure:hover img {
                transform: scale(1.2);
            }

            figure .card_image {
                width: 100px;
                height: 100px;
                border-radius: 1rem;
                overflow: hidden;
            }

                figure .card_image img {
                    width: 100%;
                    height: 100%;
                    border-radius: 1rem;
                    object-fit: cover;
                }
    </style>
</head>
