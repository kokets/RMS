                            </a>
                        </div>
                        <table id="event-table">

                            <thead>
                                <tr class="color-pellette-0">
                                    <th scope="col" width="18%">Type</th>
                                    <th scope="col" width="10%">Status</th>
                                    <th scope="col" width="10%">Action</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var type in Model.LicenseTypeList)
                                {
                                    <tr class="table-row">
                                            <td data-label="Type" class="color-pellette-4">@type.Type	</td>
                                            <td data-label="Status">@type.Status</td>
                                            <td data-label="Action">
                                                    <form asp-controller="LicenseMLTypesEdit" asp-action="Index" method="get">
                                                        <input type="hidden" name="id" value="@type.TypeId" />
                                                        <button type="submit" class="edit-link-button"> <a>Edit</a> </button>
                                                    </form>
                                            </td>
                                    </tr>
                                }
                              
                            </tbody>
                        </table>
                    </div>
                </div>
