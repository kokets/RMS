@model List<BudgetYearModel>
@{
    ViewData["Title"] = "Profile Page";
}

<body>

    <!--/***************************************/
             ----   section-1  ----
         ----   OTHER DEFENITIONS  ----
    /***************************************/-->

    <div class="section2 color-pellette-2">
        <div class="row">
            <div class="large-2 medium-12 small-12 padding_20 columns">
                <img src="images/hsrclogo@2x.png" width="180px" class="logo" alt="" />

            </div>

            <div class="large-10 medium-12 small-12 columns padding_35 navigator">

                <nav id="main-nav">

                    <!-- Mobile menu toggle button (hamburger/x icon) -->
                    <input id="main-menu-state" type="checkbox" />
                    <label class="main-menu-btn" for="main-menu-state">
                        <span class="main-menu-btn-icon"></span> Toggle main menu visibility
                    </label>


                    <!-- Sample menu definition -->
                    <ul id="main-menu" class="sm sm-mint">
                        <li><a asp-controller="Projects1" asp-action="Index">Time Recording</a></li>
                        <li>
                            <a href="#">About</a>
                            <ul>
                                <li><a href="#">Introduction to SmartMenus jQuery</a></li>
                                <li><a href="#">Demos + themes</a></li>
                                <li><a href="#">The author</a></li>
                                <li>
                                    <a href="#">The company</a>
                                    <ul>
                                        <li><a href="#">About Vadikom</a></li>
                                        <li><a href="#">Projects</a></li>
                                        <li><a href="#">Services</a></li>
                                        <li><a href="#">Privacy policy</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li><a asp-controller="Projects" asp-action="Index">Projects</a></li>
                        <li>
                            <a asp-controller="Projects1" asp-action="Index">Budget</a>
                        </li>
                        <li><a asp-controller="BudgetYears" asp-action="Index">SYSTEM MANAGEMENT</a></li>
                        <li><a asp-controller="TeamConfigure" asp-action="Index">TEAM MANAGEMENT</a></li>
                        <li><a asp-controller="AccessGroups" asp-action="Index">ACCESS GROUPS</a></li>
                    </ul>
                </nav>

            </div>

        </div>

    </div>


    <!--/***************************************/
             ----   section-3  ----
         ----   OTHER DEFENITIONS  ----
    /***************************************/-->

    <div class="section3 color-pellette-8 text-center">
        <div class="row padding_40 ">
            <div class="columns small-8 medium-centered small-centered large-centered">
                <h4>Budget Details and Approval</h4>
                <p>Social science that makes a difference</p>
            </div>
            <a asp-controller="Home" asp-action="Index"
               class="button radius padding_10">Back</a>
            <a asp-controller="Home" asp-action="Index"
               class="button radius padding_10">Home</a>
        </div>
    </div>


    <!--/***************************************/
             ----   section-4 ----
         ----   OTHER DEFENITIONS  ----
    /***************************************/-->


	<div class="section5 color-pellette-5">
		<div class="row collapse" data-equalizer>
			<div class="large-9 medium-12 small-12 columns">
				<div class="large-12 medium-12 small-12 columns padding_10 data-equalizer-watch">
					<div class="content-blocks content-blocks-0">
						<h3>Budget List</h3>
						<table>

							<thead>
								<tr class="color-pellette-0">
									<th scope="col" width="8%">PROJECT</th>
									<th scope="col" width="19%">TITLE</th>
									<th scope="col" width="8%">ED App</th>
									<th scope="col" width="8%">Fin App</th>
									<th scope="col" width="8%">Income</th>
									<th scope="col" width="8%">Direct Costs</th>
									<th scope="col" width="8%">Resource Costs</th>
									<th scope="col" width="8%">Total Costs</th>
									<th scope="col" width="8%">Difference</th>
									<th scope="col" width="8%">Actions</th>

								</tr>
							</thead>
							<tbody>

								<tr>
									<td scope="row" data-label="PROJECT" class="color-pellette-4"><a asp-controller="ProjectDetails" asp-action="Index">DKAAAA</a></td>
									<td data-label="TITLE">IT Surplus Funds Projects</td>
									<td data-label="STATUS">0</td>
									<td data-label="FUNDING">0</td>
									<td data-label="PROJECT LEVEL">0</td>
									<td data-label="PROJECT TYPE">0</td>
									<td data-label="PROJECT LEADER">0</td>
									<td data-label="PROJECT TYPE">0</td>
									<td data-label="PROJECT LEADER">0</td>
									<td data-label="PROGRESS" class="down text-pellette-1"><a asp-controller="ProjectDetails" asp-action="Index"><i class="fa fa-download" aria-hidden="true"></i></a></td>

								</tr>
								
							</tbody>
						</table>
					</div>
				</div>





			</div>
			<div class="large-3 medium-12 small-12 columns widgets">
				<div class="large-12 medium-6 columns padding_10 data-equalizer-watch">
					<div class="content-blocks content-blocks-widget-1">
						<div class="wgt">
							<h3>Info</h3>
							This page contains a list of all Projects
						</div>
					</div>
				</div>
				<div class="large-12 medium-6 columns padding_10 data-equalizer-watch">
					<div class="content-blocks content-blocks-widget-2">
						<div class="wgt1">
							<h3>Add New Project</h3>

							<div class="medium-12 cell padding_10">
								<label>
									Project Title
									<input type="text" />
								</label>
							</div>

							<div class="medium-12 cell padding_10">
								<label>
									Project Funding
									<select type="text" placeholder>
										<option>Outsourced</option>
										<option>In House</option>
									</select>
								</label>
							</div>
							<div class="medium-12 cell padding_10">
								<label>
									Project Level
									<select type="text" placeholder>
										<option>High</option>
										<option>Medium</option>
										<option>Low</option>
									</select>
								</label>
							</div>
							<div class="medium-12 cell padding_10">
								<label>
									Project Type
									<input type="text" />
								</label>
							</div>
							<div class="medium-12 cell padding_10">
								<label>
									Project Leader
									<select type="text" placeholder>
										<option>Peter Drury, (MR P)</option>
										<option>Jane Doe, (Mrs, J)</option>
										<option>John Deer, (Mr, J)</option>
										<option>Emily Jones, (Mrs, E)</option>
										<option>Tanya Meyer, (Mrs, T)</option>

									</select>
								</label>
							</div>
							<div class="large-4  data-equalizer-watch">
								<a asp-controller="Projects" asp-action="Index"
		   class="button radius padding_10">Add</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>




	</div>
    <!--/***************************************/
             ----   section-6  ----
         ----   OTHER DEFENITIONS  ----
    /***************************************/-->
    <div class="section6 color-pellette-5 padding_20">
        <div class="row collapse color-pellette-5 hide-for-large show-for-small-only">
            <div class="wrappon">
                <div class="large-12 color-pellette-2 columns up-section">
                    <div class="large-3 medium-6 small-6 columns padding_20">
                        <div class="blocks blocks-1">
                            <div class="large-7 medium-7 small-12 columns padding_40"><h3>Uploaded Documents for the month <br><hlite>59%</hlite></h3></div>
                            <div class="large-5 medium-5 small-12 columns padding_20 hide"><img src="images/Group81.png" alt="" /></div>
                        </div>
                    </div>
                    <div class="large-3 medium-6 small-6 columns padding_20">
                        <div class="blocks blocks-2">
                            <div class="large-7 medium-7 small-12 columns padding_40"><h3>Data captured for the for the month<br><hlite>80%</hlite></h3></div>
                            <div class="large-5 medium-5 small-12 columns padding_20 hide"><img src="images/graph-report.png" alt="" /></div>

                        </div>
                    </div>
                    <div class="large-3 medium-6 small-6 columns padding_20">
                        <div class="blocks blocks-3">

                            <div class="large-7 medium-7 small-12 columns padding_30"><h3>Data modifications for the month<br><hlite>40%</hlite></h3></div>
                            <div class="large-5 medium-5 small-12 columns padding_20 hide"><img src="images/Group112.png" alt="" /></div>

                        </div>
                    </div>
                    <div class="large-3 medium-6 small-6 columns padding_20">
                        <div class="blocks blocks-4">
                            <div class="large-12 columns padding_20">
                                <h3>LATEST DATA ENTRIES </h3>
                                <ul>
                                    <li>Interpark South Africa Pty Ltd</li>
                                    <li>Interpark South Africa Pty Ltd</li>
                                </ul>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SmartMenus jQuery init -->
    <script type="text/javascript">
        $(function () {
            $('#main-menu').smartmenus({
                subMenusSubOffsetX: 1,
                subMenusSubOffsetY: -8
            });
        });

    </script>

    <script src="js/vendor/what-input.js"></script>
    <script src="js/vendor/foundation.js"></script>
    <script type="text/javascript" src="script.js"></script>




</body>
