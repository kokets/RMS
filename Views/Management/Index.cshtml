	<div class="section5 color-pellette-5">
		<div class="row collapse" data-equalizer>
			<div class="large-9 medium-12 small-12 columns">
				<div class="large-12 medium-12 small-12 columns padding_10 data-equalizer-watch">
					<div class="content-blocks content-blocks-0">
						<h3>Accounts</h3>
						<table>

							<thead>
								<tr class="color-pellette-0">
									<th scope="col" width="8%">ID</th>
									<th scope="col" width="19%">Account Type</th>
									<th scope="col" width="19%">Name</th>
									<th scope="col" width="6%">CONFIGURE</th>
									<th scope="col" width="6%">DELETE</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var account in Model)
								{
									<tr>
										<td scope="row" data-label="ID">@account.Id</td>
										<td data-label="Account Type">@account.groupId</td>
										<td data-label="Name">@account.Name</td>
										<td class="down color-pellette-1">@Html.ActionLink("Edit", "", new { id = account.Id })</td>
										<td class="down color-pellette-4">@Html.ActionLink("Delete", "Delete", new { id = account.Id }, new { onclick = "return confirm('Are you sure you want to delete this item?');" })</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>





