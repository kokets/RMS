    <div id="myModal" class="my-modal">
        <div class="my-modal-content-indicator">
            <span class="my-close" onclick="modalHandler.closeModal('myModal')">&times;</span>
            <div class="my-modal-content-header">
                <h4>Add Quick Reminder </h4>

            </div>
            <div class="my-modal-content-body">
                <form asp-action="Index" method="post" onsubmit="return MethodHandler.GiftValidateForm()">
                    @Html.AntiForgeryToken()


                    <div class="">
                        <div class="search-section">

                            <div class="medium-12 cell ">
                                <label>
                                    Reminder for
                                    <span class="mandatory-star">*</span>

                                    @Html.DropDownListFor(model => model.NewLicenseRemainder.LicenseUser, Model.UsersOptionAsync, "--Please Select--", new { required = "required", id = "LicenseOwner" })
                                    @Html.ValidationMessageFor(model => model.NewLicenseRemainder.LicenseUser)
                                </label>
                            </div>
                            <div class="medium-12 cell">
                                <label>
                                    Reminder date
                                    @Html.EditorFor(model => model.NewLicenseRemainder.RemainderDate, new { htmlAttributes = new { @class = "form-control" , type = "date" } })
                                    @Html.ValidationMessageFor(model => model.NewLicenseRemainder.RemainderDate)
                                </label>
                            </div>

                            <div class="medium-12 cell">
                                <label>
                                    Comment
                                    @Html.TextAreaFor(model => model.NewLicenseRemainder.Comment, new {required = "required"  , id = "comment-input", rows = "1" })

                                </label>
                            </div>

                        </div>
                    </div>
                    <div class="my-clearfix">
                        <br />
                        <button type="button" class="my-cancelbtn" onclick="modalHandler.closeModal('myModal')">Cancel</button>
                        <button type="submit" class="my-deletebtn1" >Add</button>
                    </div>
                </form>
            </div>
         
