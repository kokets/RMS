                -webkit-mask-composite: xor;
                -webkit-mask-clip: text, padding-box;
                margin: -1px;
                justify-content: center;
            }

            figure:hover figcaption {
                --_i: 0%;
            }

            figure:hover img {
                transform: scale(1.2);
            }

            figure .card_image {
                width: 100px;
                height: 100px;
                border-radius: 1rem;
                overflow: hidden;
            }

                figure .card_image img {
