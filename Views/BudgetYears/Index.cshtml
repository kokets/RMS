            }

            .buttons-row button {
                margin-right: 10px; /* Adjust the value to add the desired space between buttons */
            }

        .download-buttons {
            background-color: grey;
            height: 35px;
            width: 50px;
            border-radius: 6px;
            color: white;
            font-family: inherit;
            margin-bottom: 10px;
