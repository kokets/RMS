            background-repeat: no-repeat;
        }


        table {
            overflow: hidden;
        }



        tr {
            transition: all 1s ease-in-out;
        }

            tr.slide-out {
                transform: translateX(100%);
            }

            tr.slide-in {
                transform: translateX(0);
            }

    </style>
</head>
